{
  "name": "superpower",
  "version": "0.1.0",
  "private": true,
  "description": "A tiny app for infomation of superhero and supervillain",
  "license": "MIT",
  "engines": {
    "node": "14.x",
    "yarn": "1.x"
  },
  "author": {
    "name": "Kai Wang",
    "url": "https://github.com/kwrush"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kwrush/superpower.git"
  },
  "scripts": {
    "tsc": "tsc",
    "start": "razzle start",
    "build": "razzle build",
    "test": "razzle test --env=jsdom",
    "lint": "eslint . --ext .js,.ts,.tsx --ignore-path .gitignore --max-warnings 0",
    "format": "prettier --ignore-path .gitignore --write .",
    "start:prod": "NODE_ENV=production node build/server.js",
    "clean:build": "rimraf ./build",
    "deploy": "git push heroku master"
  },
  "dependencies": {
    "abort-controller": "^3.0.0",
    "classnames": "^2.2.6",
    "express": "^4.17.1",
    "razzle": "^3.1.0",
    "razzle-heroku": "^3.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.0.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "zustand": "^3.1.3"
  },
  "devDependencies": {
    "@testing-library/react": "^10.0.4",
    "@types/classnames": "^2.2.10",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@types/react-helmet": "^6.0.0",
    "@types/react-router-dom": "^5.1.5",
    "@types/webpack-env": "^1.15.2",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "eslint": "^7.0.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^25.5.0",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "razzle-plugin-typescript": "^3.1.0",
    "ts-jest": "^25.5.0",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn jest"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "yarn lint --fix"
    ]
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "moduleFileExtensions": [
      "tsx",
      "ts",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^~app/(.*)": "<rootDir>/src/$1",
      "\\.css$": "identity-obj-proxy",
      "\\.svg$": "<rootDir>/node_modules/razzle/config/jest/fileTransform.js"
    },
    "testMatch": [
      "<rootDir>/src/**/?(*.)test.(ts|tsx)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ]
  }
}
